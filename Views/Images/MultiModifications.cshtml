@{
    ViewData["Title"] = "Multi modifications";
}

<h2>Multi-Modification Upload</h2>

<form asp-action="MultiModifications" method="post" enctype="multipart/form-data">
    <div>
        <label>Plik:</label><br />
        <input type="file" name="file" required />
    </div>

    <div>
        <label>Resize (width x height):</label><br />
        <input type="number" name="width" value="512" /> x
        <input type="number" name="height" value="512" />
    </div>

    <div>
        <label>Crop (x, y, width, height):</label><br />
        <input type="number" name="x" value="100" /> ,
        <input type="number" name="y" value="100" /> ,
        <input type="number" name="cropWidth" value="300" /> x
        <input type="number" name="cropHeight" value="300" />
    </div>

    <br />
    <button type="submit">Upload and modify</button>
</form>

@if (TempData["Message"] != null)
{
    <div style="margin-top: 20px; color: red;">
        <strong>@TempData["Message"]</strong>
    </div>
}
